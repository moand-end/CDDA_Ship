[
    {
        "//": "空袭系统",
        "type": "effect_on_condition",
        "id": "EOC_Siren_Airstrike_System",
        "condition": {
            "and": [
                "u_is_outside",
                {
                    "math": [
                        "u_Ship_Judgment",
                        "!=",
                        "0"
                    ]
                },
                {
                    "math": [
                        "u_raid_Selection",
                        "==",
                        "0"
                    ]
                }
            ]
        },
        "recurrence": [
            "2 hours",
            "3 hours"
        ],
        "effect": [
            {
                "if": {
                    "math": [
                        "u_Siren_activity_level",
                        ">",
                        "0"
                    ]
                },
                "then": [
                    {
                        "math": [
                            "u_Airstrike_Point",
                            "=",
                            "rand(10)"
                        ]
                    },
                    {
                        "u_message": "天空传来整整呼啸声……\n<color_red>快跑！</color>",
                        "popup": true
                    },
                    {
                        "run_eocs": "EOC_Siren_Airstrike_judgement",
                        "time_in_future": "3 m"
                    }
                ],
                "else": [
                    {
                        "u_message": "你下意识看了看天空，但什么也没有。"
                    }
                ]
            }
        ]
    },
    {
        "//": "空袭判断",
        "type": "effect_on_condition",
        "id": "EOC_Siren_Airstrike_judgement",
        "effect": [
            {
                "math": [
                    "u_Airstrike_choose",
                    "=",
                    "rand(1)"
                ]
            },
            {
                "if": {
                    "math": [
                        "u_Airstrike_Point",
                        "<=",
                        "u_Siren_activity_level"
                    ]
                },
                "then": [
                    {
                        "switch": {
                            "math": [
                                "u_Airstrike_choose"
                            ]
                        },
                        "cases": [
                            {
                                "case": 1,
                                "effect": {
                                    "run_eocs": "EOC_Spawn_Aircraft_bombing"
                                }
                            },
                            {
                                "case": 2,
                                "effect": {
                                    "run_eocs": [
                                        {
                                            "id": "EOC_Spawn_High_altitude_bombing_1",
                                            "effect": [
                                                {
                                                    "run_eocs": "EOC_Spawn_High_altitude_bombing",
                                                    "time_in_future": "1 s"
                                                }
                                            ]
                                        }
                                    ],
                                    "iterations": {
                                        "math": [
                                            "30+u_Siren_activity_level*10"
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
]
